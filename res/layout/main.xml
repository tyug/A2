<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout1" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
 	android:theme="@android:style/Theme.Translucent"
 	android:background="@drawable/blue_gradient"
    android:weightSum="1">
    <TextView android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:id="@+id/textView1" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="@string/status"></TextView>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/statusText" android:layout_alignLeft="@+id/statusText" android:layout_alignParentRight="true" android:id="@+id/myMacText" android:editable="false">
        <requestFocus></requestFocus>
    </EditText>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/myMacText" android:layout_alignLeft="@+id/myMacText" android:layout_alignParentRight="true" android:id="@+id/myIpText" android:editable="false"></EditText>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/textView5" android:layout_alignParentRight="true" android:id="@+id/lastBtScanText" android:editable="false" android:layout_alignLeft="@+id/myIpText"></EditText>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:id="@+id/scanBtBtn" android:text="@string/scanBT"></Button>
    <Button android:layout_width="wrap_content" android:text="@string/startStopXfer" android:id="@+id/startStopTrandferBtn" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"></Button>
    <EditText android:layout_width="wrap_content" android:editable="false" android:layout_height="wrap_content" android:id="@+id/statusText" android:layout_alignTop="@+id/textView1" android:layout_alignParentRight="true" android:layout_toRightOf="@+id/textView2"></EditText>
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/myMac" android:layout_height="wrap_content" android:layout_alignTop="@+id/myMacText" android:layout_alignLeft="@+id/textView1"></TextView>
    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/myIP" android:layout_height="wrap_content" android:layout_below="@+id/myMacText" android:layout_alignLeft="@+id/textView2"></TextView>
    <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/lastBTScan" android:layout_height="wrap_content" android:layout_below="@+id/myIpText" android:layout_alignLeft="@+id/textView3"></TextView>
    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:text="@string/BTScanResults" android:layout_height="wrap_content" android:layout_below="@+id/lastBtScanText" android:layout_centerHorizontal="true"></TextView>
    <EditText android:layout_width="wrap_content" android:editable="false" android:id="@+id/btScanResultsText" android:layout_below="@+id/textView4" android:layout_alignLeft="@+id/textView5" android:layout_above="@+id/fileListBtn" android:layout_alignRight="@+id/lastBtScanText" android:layout_height="match_parent"></EditText>
    <Button android:layout_width="wrap_content" android:text="@string/fileList" android:id="@+id/fileListBtn" android:layout_height="wrap_content" android:layout_alignTop="@+id/scanBtBtn" android:layout_toRightOf="@+id/textView2"></Button>
    
</RelativeLayout>
